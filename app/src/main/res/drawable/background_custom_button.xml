<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#272727" />
            <corners android:radius="5dp" />
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />
            <stroke android:width="2dp" android:color="#F9F9F9" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#272727" />
                    <corners android:radius="5dp" />
                    <stroke android:width="1dp" android:color="#F9F9F9" />
                </shape>
            </item>
            <item android:gravity="end|top" >
                <bitmap android:src="@drawable/corner_right" />
            </item>
            <item android:gravity="start|bottom" >
                <bitmap android:src="@drawable/corner_left"
                    android:padding="4dp"/>
            </item>
        </layer-list>
    </item>
</selector>