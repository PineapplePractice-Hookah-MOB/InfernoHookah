<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.AuthFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logoInfernoAuth"
        android:layout_width="wrap_content"
        android:layout_height="124dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_logo_inferno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/entranceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="bold"
        android:text="Вход"
        android:layout_marginTop="52dp"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoInfernoAuth" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptionEntranceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:visibility="gone"
        android:text="Введите номер вашего телефона\nв международном формате"
        android:gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entranceTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptionProofTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:visibility="gone"
        android:text="Введите последние 4 цифры\nвходящего номера"
        android:gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entranceTV" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/descriptionDataTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:visibility="gone"
        android:text="Введите имя и дату\nвашего рождения"
        android:gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entranceTV" />

    <EditText
        android:id="@+id/inputPhoneNumberTI"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:hint="+7 xxx xxx-xx-xx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/descriptionEntranceTV" />

    <EditText
        android:id="@+id/inputProofNumberTI"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:hint="X X X X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/descriptionEntranceTV" />

    <EditText
        android:id="@+id/inputNameTI"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:hint="Имя"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/descriptionEntranceTV" />

    <EditText
        android:id="@+id/inputBirthdayTI"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:hint="Дата рождения"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/inputNameTI" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/requestCallBTN"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginBottom="94dp"
        android:visibility="gone"
        android:text="Далее"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/proofCodeBTN"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginBottom="94dp"
        android:text="Далее"
        android:focusable="true"
        android:clickable="true"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveDataBTN"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginBottom="94dp"
        android:text="Далее"
        android:focusable="true"
        android:clickable="true"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>