<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".view.fragments.AuthFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logoInfernoAuth"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_logo_inferno_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/entranceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Вход"
        android:textColor="@color/main_text_color"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoInfernoAuth" />

    <EditText
        android:id="@+id/loginTI"
        android:layout_width="348dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        android:hint="Логин"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_text_color"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entranceTV" />

    <EditText
        android:id="@+id/passTI"
        android:layout_width="348dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat_light"
        android:gravity="center"
        android:hint="Пароль"
        android:textColor="@color/main_text_color"
        android:textColorHint="@color/main_text_color"
        android:visibility="visible"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginTI" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enterBTN"
        android:layout_width="286dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_custom_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="Вход"
        android:textAllCaps="false"
        android:textColor="@color/main_text_color"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passTI" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registrationBTN"
        android:layout_width="286dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_custom_button"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="Регистрация"
        android:textAllCaps="false"
        android:textColor="@color/main_text_color"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterBTN" />

    <ImageView
        android:id="@+id/smokeMini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_smoke_mini"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>